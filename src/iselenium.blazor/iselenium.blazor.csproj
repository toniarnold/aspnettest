<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>
  
  <PropertyGroup>
    <Authors>Toni Arnold</Authors>
    <Version>0.2.1</Version>
    <PackageId>iselenium.blazor</PackageId>
    <Product>aspnettest</Product>
    <Description>ASP.NET In-App-GUI-Tests with Selenium and NUnit</Description>
    <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
    <Copyright>Copyright © 2018-2022</Copyright>
    <PackageProjectUrl>https://github.com/toniarnold/aspnettest/</PackageProjectUrl>
    <RepositoryUrl>https://github.com/toniarnold/aspnettest.git</RepositoryUrl>
    <PackageReleaseNotes>alpha</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="bunit" Version="1.11.7" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.10" />
    <PackageReference Include="Moq" Version="4.18.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\asplib.blazor\asplib.blazor.csproj" />
    <ProjectReference Include="..\iselenium.core\iselenium.core.csproj" />
  </ItemGroup>

  <!-- Don't require the SMC code generator Makefile project dependency when /p:noSmc=true -->
  <ItemGroup Condition="$(noSmc)!='true'">
    <ProjectReference Include="TestRunnerSmc\testrunner.sm.vcxproj">
      <Name>testrunner.sm</Name>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>
</Project>