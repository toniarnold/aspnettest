@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, asplib.core
@using minimal.Models
@using asplib.Model
@model WithStorageViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>storage</title>
    <style>
        h1 {
            font-size: 1.25em;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
    <form asp-controller="WithStorage" asp-action="Submit" method="post">
        <h1>minimalist test setup with storage</h1>
        Session Storage:<br />
        <input asp-for="Storage" type="radio" value="@Storage.ViewState" checked="checked" /> ViewState
        <input asp-for="Storage" type="radio" value="@Storage.Session" /> Session
        <input asp-for="Storage" type="radio" value="@Storage.Database" /> Database
        <br />
        <input asp-for="ContentTextBox" />
        <button type="submit" id="submitButton">Submit</button>
        <ol>
            @foreach (var item in Model.Content)
            {
                <li>@item</li>
            }
        </ol>
        <input viewstate="@ViewBag.ViewState" />
    </form>
</body>
</html>
